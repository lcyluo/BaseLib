<resources>

    <!-- Base application theme. -->
    <style name="BaseCoreTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/base_core_color_primary_white</item>
        <item name="colorPrimaryDark">@color/base_core_color_primary_white_dark</item>
        <item name="colorAccent">@color/base_core_color_accent</item>
        <item name="actionMenuTextAppearance">@style/BaseCoreMenuTextStyle</item>
        <item name="android:windowBackground">@color/base_core_window_background</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.FitsSystemWindows"/>

    <style name="BaseCoreTheme.NoActionBar.White">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.Gallery">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.WhiteToolBar.White">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.WhiteToolBar">
        <item name="colorPrimary">@color/base_core_color_primary_white</item>
        <item name="colorPrimaryDark">@color/base_core_color_primary_white_dark</item>
        <item name="actionMenuTextColor">@color/base_core_color_accent</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.WhiteBackground">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.Main"/>

    <style name="BaseCoreTheme.NoActionBar.Main.White">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BaseCoreMenuTextStyle">
        <item name="android:textSize">@dimen/base_core_sp_15</item>
    </style>

    <style name="BaseCoreToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/base_core_sp_17</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/base_core_color_title_white</item>
    </style>

    <style name="BaseCoreTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BaseCoreTheme.AppBarOverlay.White" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/base_core_color_22</item>
    </style>

    <style name="BaseCoreTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BaseCoreLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="base_core_line_horizontal">
        <item name="android:background">@color/base_core_color_e9</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_core_divider_height</item>
    </style>

    <style name="base_core_app_line">
        <item name="android:background">@color/base_core_color_dd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_core_divider_height</item>
    </style>

    <style name="base_core_style_empty_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/base_core_dp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/base_core_dp_64</item>
        <item name="android:textColor">@color/base_core_color_99</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>
