<resources>

    <style name="BaseCoreTheme.NoActionBar.FitsSystemWindows">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseCoreTheme.NoActionBar.Main" parent="BaseCoreTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowAnimationStyle">@style/BaseCore.Translucent.Style</item>-->
    </style>

    <style name="BaseCore.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
</resources>
